<% include navbar%>
<div class="page-content">
    <div class="mdl-grid gird-width-fix">
        <div class="mdl-cell mdl-cell--12-col cell-color demo-card-square mdl-card mdl-shadow--2dp card-width-fix">
            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">Login</h2>
            </div>
            <div class="mdl-card__supporting-text">
                <form action="#" method="post">
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" type="text" id="sample1" name="name">
                        <label class="mdl-textfield__label" for="sample1">User ID</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" type="password" id="sample2" name="password">
                        <label class="mdl-textfield__label" for="sample2">Password</label>
                        <span class="mdl-textfield__error">Input is not a number!</span>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <input type="submit" value="Login" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/reg">Sign Up</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<% include footer%>