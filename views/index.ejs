<% include navbar.ejs %>
        <div class="page-content">
            <div class="mdl-grid gird-width-fix">
                <div class="mdl-cell mdl-cell--12-col cell-color demo-card-square mdl-card mdl-shadow--2dp card-width-fix">
                    <div class="mdl-card__title mdl-card--expand">
                        <% if (success) { %>
                        <h2 class="mdl-card__title-text"><%= success %></h2>
                        <% } %>
                        <% if (error) { %>
                        <h2 class="mdl-card__title-text"><%= error %></h2>
                        <% } %>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                            More
                        </a>
                    </div>
                </div>
            </div>
            <% posts.forEach(function (post, index) { %>
            <div class="mdl-grid gird-width-fix">
                <div class="mdl-cell mdl-cell--12-col cell-color demo-card-square mdl-card mdl-shadow--2dp card-width-fix">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text"><%= post.title %></h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                        <%- post.post %>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <a href="#" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                            More
                        </a>
                        <span class="demo-card-image__filename">作者：<a href="#"><%= post.name %></a> |
                日期：<%= post.time.minute %></span>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
<% include footer.ejs %>